<section id='content' class='work'>
	<div class='work-chrono'>
		<% @works.each do |work| %>
			<div class='work-box'>

			</div>
		<% end %>
	</div>
	<div class='work-listing'>

		<h3>My work</h3>

		<% @works.each do |work| %>
			<div class='work-item'>
				<a href='<%= url_for work %>'><div class='picture'></div></a>
				<h4><%= link_to work.name, work %></h4>
				<p><%= work.tagline %></p>
			</div>
		<% end %>
	</div>
</section>


